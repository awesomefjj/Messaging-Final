<h1>Messages</h1>
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between">
        <div>
          <h4 class="card-title">Messages Center</h4>
        </div>
        <div><%= link_to "新增消息", new_notification_path(tenant_id: params[:tenant_id]), class:"btn btn-outline-light",style:"color:#36bea6; border-color:#36bea6;" %> </div>
    </div>
        <div class="table-responsive">
            <table class="table">
                <thead class="text-white" style="background-color: #36bea6;">
        
                        <tr>
                        <th>Tenant</th>
                        <th>Name</th>
                        <th>Phone num</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Receive</th>
                        <th>Time</th>
                        <th colspan="3"></th>
                        </tr>
                </thead>
        
                <tbody>
                    <% if @tenant_notifications %>
                      <%  @tenant_notifications.each do |notification| %>
                       <tr>
                        <td>
                            <%= notification.tenant_id %>
                        </td>
                        <td>
                            <%= notification.tenant_name %>
                        </td>
                        <td>
                            <%= notification.phone_num %>
                        </td>
                        <td>
                            <%= notification.title %>
                        </td>
                        <td>
                            <%= notification.content %>
                        </td>
                        <td>
                            <%= notification.receive_id %>
                        </td>
                        <td>
                            <%= notification.create_t.to_date %>
                        </td>
                        <td>
                            <%= link_to 'Show' , notification %>
                        </td>
                    </tr>
                      <% end %>  
                      
                    <% else %>   
                      <% @notifications.each do |notification| %>
                      <tr>
                        <td>
                            <%= notification.tenant_id %>
                        </td>
                        <td>
                            <%= notification.tenant_name %>
                        </td>
                        <td>
                            <%= notification.phone_num %>
                        </td>
                        <td>
                            <%= notification.title %>
                        </td>
                        <td>
                            <%= notification.content %>
                        </td>
                        <td>
                            <%= notification.receive_id %>
                        </td>
                        <td>
                            <%= notification.create_t.to_date %>
                        </td>
                        <td>
                            <%= link_to 'Show' , notification %>
                        </td>
                    
                        <td>
                            <%= link_to 'Destroy' , notification, method: :delete, data: { confirm: 'Are you sure?'
                                } %>
                        </td>
                    </tr>  
                      <% end %>
                    <% end %>    
                </tbody>
            </table>
            <div class="d-flex justify-content-center"><%= paginate @tenant_notifications %></div>
                
            
        </div>
    </div>
</div>