<h1>Messages</h1>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Messages Center</h4>
        <h6 class="card-subtitle">消息搜索展示</h6>
        <div class="table-responsive">
            <table class="table">
                <thead class="text-white" style="background-color: #36bea6;">

                        <tr>
                        <th>Tenant</th>
                        <th>Tenant name</th>
                        <th>Phone num</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Receive</th>
                        <th>Time</th>
                        <th colspan="3"></th>
                        </tr>
                </thead>

                <tbody>
                    <% @notifications.each do |notification| %>
                        <tr>
                            <td>
                                <%= notification.tenant_id %>
                            </td>
                            <td>
                                <%= notification.tenant_name %>
                            </td>
                            <td>
                                <%= notification.phone_num %>
                            </td>
                            <td>
                                <%= notification.title %>
                            </td>
                            <td>
                                <%= notification.content %>
                            </td>
                            <td>
                                <%= notification.receive_id %>
                            </td>
                            <td>
                                <%= notification.create_t.to_date %>
                            </td>
                            <td>
                                <%= link_to 'Show' , notification %>
                            </td>
                            <td>
                                <%= link_to 'Edit' , edit_notification_path(notification) %>
                            </td>
                            <td>
                                <%= link_to 'Destroy' , notification, method: :delete, data: { confirm: 'Are you sure?'
                                    } %>
                            </td>
                        </tr>
                        <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>