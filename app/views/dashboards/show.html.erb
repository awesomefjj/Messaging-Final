<h1>Dashboard</h1>

<div class="list-group">
    <% (0..4).each do |f| %>
        <%= render 'informations' %>
            <% end %>
</div>
<div class="container d-flex justify-content-between">
    <div class="card col-8">
        <div class="card-title">消息量统计</div>
        <div>
            <%= render 'charts' %>
        </div>
    </div>
    <div class="card col-4">
        <div class="card-body">
            <span class="d-block font-14 font-weight-500 text-dark">本日发送量</span>
            <div class="display-3 font-weight-500 text-dark">48</div>
        </div>
    </div>
</div>
<div class="d-flex flex-row justify-content-around">
    <%= render 'number' %>
</div>
<div class="container mt-5" sytle="height: 200px;">
    <div class="d-flex align-items-end justify-content-center ">
        Designed and Developed by Jeffery.
    </div>
</div>
<div class="chart-area">
<canvas id="myAreaChart"></canvas>
</div>
<canvas id="myChart" width="400" height="400"></canvas>
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
            label: '# of Votes',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});
</script>